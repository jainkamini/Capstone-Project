


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/list_movie_cardview"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">



       <ImageView
           android:id="@+id/list_movie_imageview"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"

           android:adjustViewBounds="true"

           android:scaleType="centerCrop"
           />

</LinearLayout>



       <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">
        <TextView
            android:id="@+id/list_movie_name_textview"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:fontFamily="sans-serif-medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingTop="8dp"


android:textColor="@color/primary_text"

            android:ellipsize="end"
            android:maxLines="1" />
        <TextView
            android:id="@+id/list_movie_title_textview"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif"
            android:paddingTop="8dp"
            android:textColor="@color/secondary_text"

            android:singleLine="true"


            android:ellipsize="end" />
        <TextView
            android:id="@+id/list_movie_releasedate_textview"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingTop="4dp"
            android:textColor="@color/secondary_text"


            android:singleLine="true"
            android:ellipsize="end" />

            <LinearLayout
                android:layout_width="wrap_content"

                android:layout_height="match_parent"

                android:orientation="horizontal">


                <TextView
                    android:id="@+id/list_movie_votecount_textview"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="4dp"
                    android:textColor="@color/secondary_text"
                    android:maxLines="1"

                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:ellipsize="end" />
                <TextView
                    android:id="@+id/list_movierating_textview"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="32dp"
                    android:paddingStart="32dp"
                    android:paddingTop="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/secondary_text"
                    android:maxLines="1"

                    android:singleLine="true"
                    android:ellipsize="end" />
            </LinearLayout>






        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

