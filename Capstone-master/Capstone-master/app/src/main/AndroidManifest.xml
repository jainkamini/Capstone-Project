<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ivan.capstone.com.capstone">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/old_tv"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MySeriesActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DetailSerieSearchedActivity"
            android:label="@string/title_activity_detail_serie_searched"
            android:theme="@style/AppTheme.NoActionBar" />

        <provider
            android:authorities="@string/content_authority"
            android:name=".Data.SeriesProvider"
            android:exported="false"
            android:syncable="true" />

        <!-- Scores Widget -->
        <receiver
            android:name=".widget.SeriesWidgetProvider"
            android:label="@string/series_widget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/widget_info_series" />
        </receiver>

        <service android:name=".widget.SeriesWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS"/>
    </application>

</manifest>
