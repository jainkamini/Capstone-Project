<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearlayaout_widget" >



            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <ImageView
                    android:id="@+id/image_serie"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/poster_description"
                    android:padding="@dimen/small_margin"
                    />


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    >

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textStyle="bold"
                        android:id="@+id/name_serie"
                        android:padding="@dimen/small_margin"
                        android:textSize="@dimen/test_title_size"
                        android:textColor="@color/black"
                        android:gravity="center"
                        />

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/small_margin"
                        android:paddingStart="@dimen/small_margin"
                        android:paddingTop="@dimen/small_margin">

                        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:id="@+id/date_serie"
                            android:padding="@dimen/small_margin"
                            android:textSize="@dimen/test_normal_size"
                            android:textColor="@color/black"
                            android:gravity="start"
                            />

                        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:id="@+id/network_serie"
                            android:padding="@dimen/small_margin"
                            android:textSize="@dimen/test_normal_size"
                            android:textColor="@color/black"
                            android:gravity="end"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
    </LinearLayout>