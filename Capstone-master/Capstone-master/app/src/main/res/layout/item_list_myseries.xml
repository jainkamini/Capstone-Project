<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="10dp"
    android:layout_marginRight="@dimen/small_margin"
    android:layout_marginLeft="@dimen/small_margin"
    android:layout_marginTop="@dimen/small_margin"

    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/touch_selector"
        >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="15dp">


            <ImageView
                android:id="@+id/image_serie"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/touch_selector"
                android:contentDescription="@string/poster_description"
                android:padding="@dimen/small_margin"
                android:transitionName="@string/transition_photo"

                />

        </android.support.v7.widget.CardView>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@drawable/touch_selector"
            >

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold"
                android:background="@drawable/touch_selector"
                android:id="@+id/name_serie"
                android:fontFamily="sans-serif-condensed"
                android:padding="@dimen/medium_margin"
                android:textSize="@dimen/test_title_size"
                android:gravity="center"
                />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin"
                android:paddingStart="@dimen/small_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:background="@drawable/touch_selector"
                    android:id="@+id/date_serie"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="@dimen/small_margin"
                    android:textSize="@dimen/test_normal_size"
                    android:gravity="start"
                    />

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:background="@drawable/touch_selector"
                    android:id="@+id/network_serie"
                    android:paddingRight="@dimen/large_margin"
                    android:paddingEnd="@dimen/large_margin"
                    android:paddingLeft="@dimen/small_margin"
                    android:paddingStart="@dimen/small_margin"
                    android:paddingTop="@dimen/small_margin"
                    android:paddingBottom="@dimen/small_margin"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/test_normal_size"
                    android:gravity="end"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>